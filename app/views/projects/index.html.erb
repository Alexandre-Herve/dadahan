<h1>Listing projects</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Is ancient</th>
      <th>Is modern</th>
      <th>Address</th>
      <th>Description</th>
      <th>Program</th>
      <th>Amount in euro</th>
      <th>Surface in squared meters</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.date %></td>
        <td><%= project.is_ancient %></td>
        <td><%= project.is_modern %></td>
        <td><%= project.address %></td>
        <td><%= project.description %></td>
        <td><%= project.program %></td>
        <td><%= project.amount_in_euro %></td>
        <td><%= project.surface_in_squared_meters %></td>
        <td><%= link_to 'Show', project %></td>
        <td><%= link_to 'Edit', edit_project_path(project) %></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

